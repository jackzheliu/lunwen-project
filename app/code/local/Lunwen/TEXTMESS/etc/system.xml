<?xml version="1.0"?>
<config>

    <tabs>
        <lunwen translate="label" module="lunwen_textmess">
            <label>Lunwen SMS</label>
            <sort_order>400</sort_order>
        </lunwen>
    </tabs>

    <sections>
        <lunwen_textmess translate="label" module="lunwen_textmess"> 
            <label>Lunwen SMS</label>
            <tab>lunwen</tab>
            <frontend_type>text</frontend_type>
            <sort_order>105</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable_sms_checkout translate="label">
                            <label>Enable SMS for Checkout</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_sms_checkout>
                        <enable_sms_status translate="label">
                            <label>Enable SMS for Status Change</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_sms_status>
                        <enable_comments translate="label comment">
                            <label>Enable for Comments Submit</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <comment><![CDATA[Submit Commit in the Order Page]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enable_comments>
                        <checkout_message translate="label comment">
                            <label>Checkout Default SMS</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <comment><![CDATA[SMS Message Content after the order is placed !]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </checkout_message>
                    </fields>
                </general>
                 <settings translate="label">
                    <label>SMS API</label>
                    <sort_order>40</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <sms_api translate="label comment">
                            <label>SMS API/SID</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>40</sort_order>
                            <comment><![CDATA[Account SID]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sms_api>
                        <sms_key translate="label comment">
                            <label>SMS Secret Keys</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>50</sort_order>
                            <comment><![CDATA[Authorisation Token]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sms_key>
                        <sms_number translate="label comment">
                            <label>SMS API Phone Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>60</sort_order>
                            <comment><![CDATA[The API Account's UK Phone Number]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sms_number>
                          <owner_phonenumber translate="label comment">
                            <label>Owner's Phone Number</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>70</sort_order>
                            <comment><![CDATA[The Store's owner's phone number]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </owner_phonenumber>
                    </fields>
                </settings>
                <ownercontrol translate="label">
                    <label>Owner Messages Settings</label>
                    <sort_order>80</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <ownercontrol_messagemyself translate="label comment">
                            <label>Owner Order Message</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>40</sort_order>
                            <comment><![CDATA[SMS to Owner once a Order is Placed]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ownercontrol_messagemyself>
                        <ownercontrol_statusChange translate="label comment">
                            <label>Status Change Message</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>50</sort_order>
                            <comment><![CDATA[SMS when Order Status is Changed]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ownercontrol_statusChange>
                        <ownercontrol_commitsubmit translate="label comment">
                            <label>Comments Submit Message</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>60</sort_order>
                            <comment><![CDATA[SMS when New Comments is Subbmitted]]></comment>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </ownercontrol_commitsubmit>
                    </fields>
                </ownercontrol> 
            </groups>  
        </lunwen_textmess>
    </sections>
</config>